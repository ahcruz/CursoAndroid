<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".InicioActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/lblTitulo"
            android:id="@+id/lblTitulo"
            android:layout_marginBottom="50dp"
            android:gravity="center"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtFrameLayout"
            android:id="@+id/txtFrameLayout"
            android:gravity="center"
            android:onClick="onClickFrameLayout" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtRelativeLayout"
            android:id="@+id/txtRelativeLayout"
            android:gravity="center"
            android:onClick="onClickRelativeLayout"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtTableLayout"
            android:id="@+id/txtTableLayout"
            android:gravity="center"
            android:onClick="onClickTableLayout"/>
    </LinearLayout>
</RelativeLayout>
